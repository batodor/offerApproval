<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:core="sap.ui.core">

	<ViewSettingsDialog
			id="viewSettingsDialog"
			confirm="onConfirmViewSettingsDialog"
			sortDescending="true"
			resetFilters="onResetFilters">
		<sortItems>
			<ViewSettingsItem
				text="{i18n>masterSort2}"
				key="TCNumber"
				selected="true"/>
			<ViewSettingsItem
				text="{i18n>masterSort1}"
				key="CounterpartyName"/>
		</sortItems>
		<filterItems>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchOfferSet' }"
				text="{i18n>offerNumber}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{TCNumber} - {PartnerName}" key="{TCNumber}" custom:name="TCNumber" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionaryTradingPurposeSet' }"
				text="{i18n>tradingPurpose}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="TradingPurpose" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchCounterpartySet', sorter: { path: 'Name' } }"
				text="{i18n>counterpartyName}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Name} - {Code}" key="{Name}" custom:name="CounterpartyName" custom:operator="Contains" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchCounterpartySet' }"
				text="{i18n>counterpartyCode}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="CounterpartyCode" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionaryStatusSet' }"
				text="{i18n>status}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="Status" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchProductTypeSet' }"
				text="{i18n>productType}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="ProductType" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchProductSet' }"
				text="{i18n>product}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="Product" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchTraderSet' }"
				text="{i18n>trader}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="Trader" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchIncotermsSet' }"
				text="{i18n>incoterms}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="Incoterms" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem items="{ path: '/dictionarySearchDeliveryPointSet' }"
				text="{i18n>deliveryPoint}"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{Code} - {Name}" key="{Code}" custom:name="DeliveryPoint" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsCustomItem
				text="{i18n>validityDate}">
				<customControl>
					<VBox class="padding">
						<DatePicker change="setDateFilter" id="validityDateFromPicker" placeholder="{i18n>dateFrom}" 
							custom:order="10" custom:operator="GE" custom:name="ValidityDate" custom:id="validityDateToPicker" />
						<DatePicker change="setDateFilter" id="validityDateToPicker" placeholder="{i18n>dateTo}" 
							custom:order="10" custom:operator="LE" custom:name="ValidityDate" custom:id="validityDateFromPicker" />
					</VBox>
				</customControl>
			</ViewSettingsCustomItem>
			<ViewSettingsCustomItem
				text="{i18n>creationDate}">
				<customControl>
					<VBox class="padding">
						<DatePicker change="setDateFilter" id="creationDateFromPicker" placeholder="{i18n>dateFrom}" 
							custom:order="11" custom:operator="GE" custom:name="CreationDate" custom:id="creationDateToPicker" />
						<DatePicker change="setDateFilter" id="creationDateToPicker" placeholder="{i18n>dateTo}" 
							custom:order="11" custom:operator="LE" custom:name="CreationDate" custom:id="creationDateFromPicker" />
					</VBox>
				</customControl>
			</ViewSettingsCustomItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>