<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>approve}" stretch="true" class="sapUiContentPadding" id="approveDialog">
		<content>
			<VBox>
				<Label text="{i18n>validityDate}" />
				<DatePicker dateValue="{ValidityDate}" id="approveValidityDate"  />
				<Label class="topLabel" text="{i18n>enterComments}" />
				<TextArea value="{Comment}" id="approveComment" rows="6" width="100%" />
				<Label class="topLabel" text="{i18n>attachments}" />
				<Table id="approveUpload" custom:id="approveUpload" select="onAttachmentSelect" mode="MultiSelect" includeItemInSelection="true" 
					width="100%" items="{ path: 'ToAttachment' }" noDataText="{i18n>noData}" growing="true" growingThreshold="5" growingScrollToLoad="false">
					<columns>
						<Column><Label class="black" text="{i18n>name}"/></Column>
						<Column hAlign="Center" width="100px"><Label class="black" text="{i18n>uploadDate}"/></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{ path: 'FileName', formatter: '.formatter.getFileName' }" />
								<Text text="{ path: 'CreateOn', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' } }"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="approveDialog" type="Back" press="dialogCancel"/>
			<Button text="{i18n>approve}" custom:id="approve" type="Accept" press="dialogApprove"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>