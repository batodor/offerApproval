	<List items="{path: 'ToApprIterations', parameters: { expand: 'ToLevels/ToAgents' }, templateShareable: false }">
		<CustomListItem>
			<List items="{ToLevels}">
				<CustomListItem>
					<Panel width="auto" headerText="{Level}{= ${LevelName} ? ' - ' : ''}{LevelName}" expandable="true">
						<List items="{ToAgents}">
							<CustomListItem>
								<Panel width="auto">
									<headerToolbar>
										<Toolbar>
											<Title text="{FIO}"/>
										</Toolbar>
									</headerToolbar>
									<content>
										<form:SimpleForm backgroundDesign="Transparent" layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="3" labelSpanS="5" 
											adjustLabelSpan="false" singleContainerFullSize="false">
											<Label text="Action"/><Text text="{Status}"/>
											<Label text="Comment"/><Text text="{Comment}"/>
											<Label text="Action Date"/><Text text="{path:'Executed', type:'sap.ui.model.type.DateTime', formatOptions : { pattern: 'dd.MM.y' }}"/>
										</form:SimpleForm>
									</content>
								</Panel>
							</CustomListItem>
						</List>
					</Panel>
				</CustomListItem>
			</List>
		</CustomListItem>
	</List>
</core:FragmentDefinition>