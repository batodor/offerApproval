<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core" 
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<List noDataText="{i18n>none}" id="offerPeriods" mode="None" items="{ path: 'ToOfferVolume', templateShareable: true }" class="padding"
		selectionChange="onListSelect">
		<CustomListItem>
			<OverflowToolbar width="100%">
				<Title text="{VolumeNumber} / {= ${VolumeType} ? ${i18n>optionalVolume} : ${i18n>fixedVolume} }" class="marginTop" titleStyle="H3"  />
			</OverflowToolbar>
			<List width="100%" noDataText="{i18n>none}" mode="None" items="{ path: 'ToOfferPeriod', templateShareable: true }" 
				selectionChange="onListSelect">
				<CustomListItem>
					<VBox width="100%">
						<HBox class="halfPadding" justifyContent="SpaceBetween" alignItems="Center" alignContent="SpaceBetween" width="100%">
							<Text text="{header>/ProductName}"/>
							<Text text="{path: 'TonnageMax', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}} {header>/VolumeUOM} +/- 
								{path: 'TonnageTolerance', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}} {TonnageToleranceUOM}"/>
							<Text textAlign="Right" text="{ path: 'DateFrom', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } } 
								{= ${DateFrom} ? ' - ' : '' } { path: 'DateTo', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } }"/>
						</HBox>
					</VBox>
				</CustomListItem>
			</List>
			<HBox class="halfPadding" justifyContent="SpaceBetween" alignContent="SpaceBetween" alignItems="Center" width="100%">
				<Text class="bold" text="{path: 'FixPrice', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}} {header>/Currency}"/>
				<Text class="bold" text="{Incoterms} - {DeliveryPointName}"/>
				<Text class="bold" text="{path: 'CV', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}} {CVBase}"/>
			</HBox>
		</CustomListItem>
	</List>
	<form:SimpleForm maxContainerCols="3" editable="false" layout="ResponsiveGridLayout" backgroundDesign="Transparent">
		<form:content>
			<Label text="Payment Term"/><Text text="{= ${PaymTerms} ? ${PaymTerms} : ${i18n>none} }"/>
			<Label text="Comment"/><Text text="{= ${Comment} ? ${Comment} : ${i18n>none} }"/>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>