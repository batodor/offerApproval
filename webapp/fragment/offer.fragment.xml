<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core" 
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<List noDataText="{i18n>none}" mode="None" items="{ path: 'ToOfferVolume', templateShareable: false }" class="padding"
		selectionChange="onListSelect">
		<CustomListItem>
			<List width="100%" noDataText="{i18n>none}" mode="None" items="{ path: 'ToOfferPeriod', templateShareable: false, sorter: { path: 'TCPosition' } }" 
				selectionChange="onListSelect">
				<CustomListItem>
					<VBox width="100%">
						<HBox class="halfPadding" justifyContent="SpaceBetween" alignItems="Center" alignContent="SpaceBetween" width="100%">
							<Text width="100px" text="{= ${TCPosition} ==='000010' ? ${VolumeType} ? ${i18n>optionalVolume} : ${i18n>fixedVolume} : '' }"/>
							<Text text="Russian Steam Coal"/>
							<Text text="{path: 'TonnageMax', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}} +/- 
								{path: 'TonnageTolerance', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}} {TonnageToleranceUOM}"/>
							<Text textAlign="Right" text="{ path: 'DateFrom', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } } 
								{= ${DateFrom} ? ' - ' : '' } { path: 'DateTo', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } }"/>
						</HBox>
					</VBox>
				</CustomListItem>
			</List>
			<HBox class="halfPadding" justifyContent="SpaceBetween" alignContent="SpaceBetween" alignItems="Center" width="100%">
				<Text text="Price"/>
				<Text text="{path: 'FixPrice', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}}"/>
				<Text text="{Incoterms} - {DeliveryPoint}"/>
				<Text text="{path: 'CV', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}} {CVBase}"/>
			</HBox>
		</CustomListItem>
	</List>
	<form:SimpleForm maxContainerCols="3" editable="false" layout="ResponsiveGridLayout" backgroundDesign="Transparent">
		<form:content>
			<Label text="Payment Term"/><Text text="{= ${PaymentTerm} ? ${PaymentTerm} : ${i18n>none} }"/>
			<Label text="Comment"/><Text text="{= ${Comment} ? ${Comment} : ${i18n>none} }"/>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>